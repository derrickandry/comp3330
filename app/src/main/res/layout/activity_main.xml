<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="237dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="34dp"
            app:srcCompat="@drawable/comp3330logo" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitProject"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="172dp"
                android:layout_weight="1"
                android:background="#F4EFEF"
                android:drawableLeft="@drawable/baseline_cloud_upload_white_18dp"
                android:drawablePadding="2dip"
                android:fontFamily="sans-serif"
                android:paddingLeft="15dip"
                android:text="Submit Project"
                android:textAlignment="center"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton

                android:id="@+id/viewProjects"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="172dp"
                android:layout_weight="1"
                android:background="#F4EFEF"
                android:drawableLeft="@drawable/baseline_search_white_18dp"
                android:drawablePadding="2dip"
                android:fontFamily="sans-serif"
                android:paddingLeft="15dip"
                android:text="View Projects"
                android:textAlignment="center"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>